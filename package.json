{
  "name": "vertex-koa",
  "version": "0.0.1",
  "description": "Vertex Koa Starter.",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "clean": "rm -rf dist",
    "format": "prettier --write './**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|mdx|html|css)'",
    "lint": "tslint 'src/**/*.ts'",
    "start": "node dist/index.js",
    "start:dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/index.js'"
  },
  "dependencies": {
    "@vertexvis/api-client-node": "^0.12",
    "async": "^3.2",
    "fast-xml-parser": "^3.19",
    "joi": "^14.3",
    "koa": "^2.13",
    "koa-bodyparser": "^4.3",
    "koa-helmet": "^6.1",
    "koa-router": "^10.0",
    "pino": "^6.11"
  },
  "devDependencies": {
    "@types/async": "^3.2",
    "@types/joi": "^14.3",
    "@types/koa": "^2.13",
    "@types/koa-bodyparser": "^4.3",
    "@types/koa-helmet": "^6.0",
    "@types/koa-router": "^7.4",
    "@types/node": "^15.0",
    "@types/pino": "^6.3",
    "prettier": "^2.2",
    "tsc-watch": "^4.2",
    "tslint": "^6.1",
    "tslint-config-prettier": "^1.18",
    "tslint-plugin-prettier": "^2.3",
    "typescript": "^4.2"
  },
  "engines": {
    "node": ">=12.10"
  }
}
